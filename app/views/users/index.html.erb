
<div class="col-md-6">
  <h5><%= link_to 'New Single User', new_user_path %> </h5>
  <br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Courses</th>
      <th>Registrar</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%if user.courses.length >=1%>
            <%= "| " %>
            <% user.courses.each do |course| %>
              <%= course.name + " | " %>
            <% end %>
          <% end %>
        </td>
        <td><% if user.is_registrar %>
            <%= '&#10004;'.html_safe %>
            <% end %>
        </td>
        <td><% if user.is_admin %>
            <%= '&#10004;'.html_safe %>
            <% end %>
        </td>
        <% if user_is_admin? %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
  <div>
    <%= form_tag import_users_path, multipart: true do %>
      <div class="form-group">
        <%= file_field_tag :file, :class =>"btn btn-default btn-file"  %>
        <%= submit_tag("Import", :class => "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div>
<br>

