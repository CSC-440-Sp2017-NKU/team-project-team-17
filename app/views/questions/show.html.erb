<p id="notice"><%= notice %></p>

<h1>Answers for: <%= @question.title %></h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= (User.find(answer.user_id)).name %></td>
        <td><%= answer.content %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path(question_id: @question.id) %>
<%= link_to 'Back', course_path(@course) %>
